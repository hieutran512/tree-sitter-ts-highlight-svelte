{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte"
    ]
}